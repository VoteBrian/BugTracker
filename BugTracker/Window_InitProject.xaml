<Window x:Class="BugTracker.Window_InitProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rename Project" Height="250" Width="400">
    <Border Padding="10">
        <StackPanel FocusManager.FocusedElement="{Binding ElementName=Txt_ProjectName}">
            <TextBlock FontSize="32pt" FontFamily="Segoe UI Light" Margin="0,0,0,20">Rename Project</TextBlock>
            <Label FontSize="12pt" FontFamily="Segoe UI Light">PROJECT NAME</Label>
            <TextBox Name="Txt_ProjectName" MaxLength="128" FontSize="12pt" Margin="0,0,0,25"/>
            <WrapPanel HorizontalAlignment="Right">
                <Button Name="Btn_InitSet" Click="SetProjectName" Width="50" Margin="0,0,25,0">SET</Button>
                <Button Name="Btn_InitCancel" Click="Close" Width="50">CANCEL</Button>
            </WrapPanel>
        </StackPanel>
    </Border>
</Window>
